@model IEnumerable<BO.Category>

@{
    ViewBag.Title = "Gestion des Catégories";
}

<h2>Gestion des Catégories</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Ajouter une nouvelle catégorie", "Create", null, new { @class = "btn btn-default" })
    }

</p>

@if (null != TempData["alertMessage"])
{
    <div class="alert alert-danger alert-dismissible" role="alert"> @TempData["alertMessage"] 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<table class="table" style="text-align:center">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Détails", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @* lien à enlever lorsque la gestion des roles sera finie *@
    @Html.ActionLink("Enregister une nouvelle catégorie", "Create")
</p>
